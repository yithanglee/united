<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :cost_price %>
  <%= number_input f, :cost_price, step: "any" %>
  <%= error_tag f, :cost_price %>

  <%= label f, :long_desc %>
  <%= text_input f, :long_desc %>
  <%= error_tag f, :long_desc %>

  <%= label f, :short_desc %>
  <%= text_input f, :short_desc %>
  <%= error_tag f, :short_desc %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :promo_price %>
  <%= number_input f, :promo_price, step: "any" %>
  <%= error_tag f, :promo_price %>

  <%= label f, :retail_price %>
  <%= number_input f, :retail_price, step: "any" %>
  <%= error_tag f, :retail_price %>

  <%= label f, :shop_id %>
  <%= number_input f, :shop_id %>
  <%= error_tag f, :shop_id %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
