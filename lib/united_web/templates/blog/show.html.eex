<h1>Show Blog</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @blog.title %>
  </li>

  <li>
    <strong>Excerpt:</strong>
    <%= @blog.excerpt %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @blog.author %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @blog.body %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.blog_path(@conn, :edit, @blog) %></span>
<span><%= link "Back", to: Routes.blog_path(@conn, :index) %></span>
